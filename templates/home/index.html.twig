    <section id="produc">
        <div id="pose3" class="tranparence">
            <h2>Mes Projets</h2>
            {# for de tes projets #}
            {% for projet in projets %}
                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                     aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">{{ projet.nom }}</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <p>{{ projet.periode }}</p>
                                <p>{{ projet.technologie }}</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer
                                </button>
                                {% if 'https' in projet.lienProjet %}
                                    <a class="btn btn-primary" target="_blank"
                                       href="{{ asset(projet.lienProjet) }}">Visiter
                                        le github du site</a>
                                {% else %}
                                    <a class="btn btn-primary" target="_blank"
                                       href="{{ asset('uploads/ProjectFolder/' ~ projet.lienProjet ) }}">Visiter
                                        le
                                        site</a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}

            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    {% for projet in projets %}
                        <div class="carousel-item {% if loop.index0 == 0 %} active {% endif %}"
                             data-bs-interval="8000">
                            <button type="button" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                {% for image in projet.imagesProjets %}
                                    {% if loop.first %}
                                        <img src="{{ asset('uploads/imgProjet/' ~ image.nomFichier) }}"
                                             class="d-block w-100"
                                             alt="capture1">
                                    {% endif %}
                                {% endfor %}
                            </button>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
                    data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Precedent</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                    data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Suivant</span>
            </button>
        </div>
    </section>

    <section id="formulate">
        <div class="container-fluid">
            {{ form_start(form) }}
            <h2 id="message">Me Contacter</h2>
            <div>
                {{ form_label(form.firstname) }}
                {% if form_errors(form.firstname) %}
                    <div class="erreur">
                        {{ form_errors(form.firstname) }}
                    </div>
                {% endif %}
                <div>{{ form_widget(form.firstname) }}</div>
            </div>
            <div>
                {{ form_label(form.lastname) }}
                {% if form_errors(form.lastname) %}
                    <div class="erreur">
                        {{ form_errors(form.lastname) }}
                    </div>
                {% endif %}
                <div>{{ form_widget(form.lastname) }}</div>
            </div>
            <div>
                {{ form_label(form.email) }}
                {% if form_errors(form.email) %}
                    <div class="erreur">
                        {{ form_errors(form.email) }}
                    </div>
                {% endif %}
                <div>{{ form_widget(form.email) }}</div>
            </div>
            <div>
                {{ form_label(form.phone) }}
                {{ form_help(form.phone) }}
                {% if form_errors(form.phone) %}
                    <div class="erreur">
                        {{ form_errors(form.phone) }}
                    </div>
                {% endif %}
                <div>{{ form_widget(form.phone) }}</div>
            </div>
            <div>
                {{ form_label(form.message) }}
                {% if form_errors(form.message) %}
                    <div class="erreur">
                        {{ form_errors(form.message) }}
                    </div>
                {% endif %}
                <div>{{ form_widget(form.message) }}</div>
            </div>
            <input type="submit" name="submit" class="button1" value="Envoyer">

            {{ form_end(form) }}
        </div>

    </section>
{% endblock %}
